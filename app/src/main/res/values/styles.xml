<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>

        <item name="android:ambientShadowAlpha" tools:targetApi="lollipop">0.05</item>
        <item name="android:spotShadowAlpha" tools:targetApi="lollipop">0.5</item>
    </style>

    <style name="Widget.CalendarView.Custom" parent="android:Widget.CalendarView">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/appGreen</item>
        <item name="android:focusedMonthDateColor">@color/black</item>
        <item name="android:weekNumberColor">@color/appGreen</item>
        <item name="android:weekDayTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="android:dateTextAppearance">@style/TextAppearance.AppCompat.Small</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">#c6c6c6</item>
        <item name="android:textSize">20sp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">#c6c6c6</item>
        <item name="colorControlNormal">#c6c6c6</item>
        <item name="colorControlActivated">#c6c6c6</item>
    </style>
</resources>
