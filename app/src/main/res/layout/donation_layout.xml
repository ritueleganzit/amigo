<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/d_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_white_bg"
    android:layout_below="@+id/fv"
    android:layout_marginTop="1dp"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.eleganzit.amigo.utils.TextViewRobotoRegular
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:layout_marginTop="4dp"
        android:justificationMode="inter_word"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley "/>


    <RelativeLayout
        android:id="@+id/rsecond"
        android:layout_below="@+id/text"
        android:layout_width="match_parent"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:paddingRight="4dp"
        android:orientation="horizontal"
        android:paddingLeft="4dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <com.eleganzit.amigo.utils.TextViewRobotoBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="234"
                android:gravity="center"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:ellipsize="end"
                android:textSize="12sp"
                android:text="TOTAL DONORS"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/s"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <com.eleganzit.amigo.utils.TextViewRobotoBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$6,000"
                android:gravity="center"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:ellipsize="end"
                android:textSize="12sp"
                android:text="RAISED"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/t"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <com.eleganzit.amigo.utils.TextViewRobotoBold
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$20,000"
                android:gravity="center"
                android:textColor="#000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:gravity="center"
                android:ellipsize="end"
                android:textSize="12sp"
                android:text="GOAL"/>

        </LinearLayout>

    </RelativeLayout>

    <SeekBar
        android:id="@+id/donation_seekbar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="false"
        android:paddingLeft="16dp"
        android:progressDrawable="@drawable/donate_seekbar_drawable"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/rsecond"
        android:paddingRight="16dp"
        android:progress="0"/>

    <RelativeLayout
        android:id="@+id/relamount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/donation_seekbar">

        <com.eleganzit.amigo.utils.TextViewRobotoRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="$0.00"/>

        <com.eleganzit.amigo.utils.TextViewRobotoBold
            android:id="@+id/txtamount"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="$0"
            android:textColor="#DD2434"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

        <com.eleganzit.amigo.utils.TextViewRobotoRegular
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:ellipsize="end"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:text="$20,000"/>

    </RelativeLayout>

    <com.eleganzit.amigo.utils.TextViewRobotoBold
        android:id="@+id/donate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relamount"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:paddingRight="20dp"
        android:textSize="10sp"
        android:text="VIEW DONATION DETAILS"
        android:background="@drawable/donate_button_bg"
        android:textColor="#ffffff"
        android:layout_centerInParent="true"
        android:src="@mipmap/like_gray" />

</RelativeLayout>