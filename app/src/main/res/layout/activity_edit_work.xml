<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:contentInsetRight="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetEnd="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetStart="0dp"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/angle_arrow_back"/>

            <com.eleganzit.amigo.utils.TextViewRobotoBold
                android:id="@+id/ed_search"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:text="Edit Profile"
                android:padding="4dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/back" />


            <ImageView
                android:id="@+id/delete"


                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_del"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/news_feed_scroll"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottombar"
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:background="#CFD0D4"
            android:layout_height="match_parent"
            android:orientation="vertical"
       >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="#CFD0D4"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/work_icon_dark"/>

                <com.eleganzit.amigo.utils.TextViewRobotoBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:textColor="@color/darkGray"
                    android:text="Work"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <EditText
                android:id="@+id/ed_work"
                android:background="#ffffff"
                android:singleLine="true"

                android:hint="Where did you work?"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="17dp"/>

            <EditText
                android:id="@+id/ed_position"
                android:background="#ffffff"
                android:layout_marginTop="1dp"
                android:singleLine="true"
                android:hint="Position"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="17dp"/>

                <EditText
                    android:id="@+id/ed_city"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                    android:hint="City/Town"
                    android:singleLine="true"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="17dp"/>

                <EditText
                    android:id="@+id/ed_physical"
                    android:background="#ffffff"
                    android:singleLine="true"
                    android:layout_marginTop="1dp"
                    android:hint="It's not physical place"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="17dp"/>

                <EditText
                    android:id="@+id/ed_description"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                  android:maxLines="4"
                    android:hint="Description"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="17dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                    android:padding="17dp"
                    android:gravity="center_vertical">

                    <com.eleganzit.amigo.utils.TextViewRobotoBold
                        android:id="@+id/txt_from"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="From"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_from"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:id="@+id/txt_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:drawablePadding="15dp"
                                android:layout_weight="1"
                                android:drawableRight="@drawable/drop_down_small"
                                android:text="Year"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:id="@+id/txt_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:drawableRight="@drawable/drop_down_small"
                                android:layout_weight="1"
                                android:drawablePadding="15dp"
                                android:text="Month"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                        <com.eleganzit.amigo.utils.TextViewRobotoRegular
                            android:id="@+id/txt_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:drawablePadding="15dp"
                            android:drawableRight="@drawable/drop_down_small"
                            android:text="Date"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        </RelativeLayout>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                    android:padding="17dp"
                    android:gravity="center_vertical">

                    <com.eleganzit.amigo.utils.TextViewRobotoBold
                        android:id="@+id/txt_to"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="To"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>



                    <LinearLayout
                        android:id="@+id/past"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_to"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:id="@+id/txt__to_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:drawablePadding="15dp"
                                android:layout_weight="1"
                                android:drawableRight="@drawable/drop_down_small"
                                android:text="Year"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:id="@+id/txt_to_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:drawableRight="@drawable/drop_down_small"
                                android:layout_weight="1"
                                android:drawablePadding="15dp"
                                android:text="Month"
                                android:layout_gravity="center_vertical"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:id="@+id/txt_to_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:drawablePadding="15dp"
                                android:drawableRight="@drawable/drop_down_small"
                                android:text="Date"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/present"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/txt_to"
                        android:orientation="horizontal">

                        <com.eleganzit.amigo.utils.TextViewRobotoRegular
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Present"

                            android:layout_gravity="center_vertical"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_marginTop="1dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:paddingTop="13dp"
                    android:paddingBottom="13dp"
                    android:gravity="center_vertical">

                    <com.eleganzit.amigo.utils.TextViewRobotoBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:text="I currently work here"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"/>

                    <LinearLayout
                        android:id="@+id/checkbox_hometown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_alignParentRight="true"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <CheckBox
                            android:id="@+id/select_home_checkbox"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:checked="false"

                            android:button="@drawable/green_checkbox_selector"
                            />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_margin="12dp"
                android:padding="2dp"
                android:background="@drawable/rounded_green_bg"
                android:layout_gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/progress"
                    android:visibility="gone"

                    android:padding="2dp"
                    android:background="@drawable/rounded_green_bg"
                    android:layout_gravity="center">
                    <ProgressBar
                        android:indeterminateTint="@android:color/white"

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        />
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/savework"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"

                    android:padding="2dp"
                    android:background="@drawable/rounded_green_bg"
                    android:layout_gravity="center">
                    <ImageView

                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@mipmap/save_icon"/>

                    <com.eleganzit.amigo.utils.TextViewRobotoBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#ffffff"
                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                        android:text="Save"/>

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</RelativeLayout>
</layout>

