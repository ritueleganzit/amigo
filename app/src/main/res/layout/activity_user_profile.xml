<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewsFeedActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        app:contentInsetRight="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetEnd="0dp"
        android:contentInsetEnd="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        android:contentInsetStart="0dp"
        android:layout_alignParentTop="true"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/camera"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/camera_white"/>

            <EditText
                android:id="@+id/ed_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search"
                android:cursorVisible="false"
                android:focusable="false"
                android:drawableLeft="@drawable/search_gray"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:padding="4dp"
                android:layout_toLeftOf="@+id/chat"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/camera"
                android:background="@drawable/search_bg"/>

            <ImageView
                android:id="@+id/chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/chat_white"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/news_feed_scroll"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottombar"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#d7d7d7"
            android:layout_height="match_parent"
            android:descendantFocusability="blocksDescendants">

            <RelativeLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:background="#ffffff"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/cheader"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/userphoto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/cover"
                        android:scaleType="centerCrop"
                        android:layout_centerVertical="true"
                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/second"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:layout_below="@+id/cheader"
                    android:layout_marginTop="1dp"
                    android:padding="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">


                    <RelativeLayout
                        android:id="@+id/rfirst"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#ffffff"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/user_add"
                            android:layout_width="61dp"
                            android:layout_height="61dp"
                            android:background="@drawable/profile_ring">

                            <ImageView
                                android:id="@+id/userimage"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_margin="2dp"
                                android:src="@drawable/user" />

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="top"
                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/user_add"
                            android:layout_marginLeft="10dp">

                            <com.eleganzit.amigo.utils.TextViewRobotoBold
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:id="@+id/user_name"
                                android:textColor="#000"
                                android:text="Username"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:layout_marginTop="5dp"
                                android:ellipsize="end"
                                android:text="Non-Governmental Organisation (NGO)"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp">
                                <RelativeLayout
                                    android:id="@+id/accept_reject"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:visibility="gone"
                                    android:layout_centerInParent="true"
                                    >

                                    <LinearLayout
                                        android:id="@+id/follow_buttons"
                                        android:layout_width="match_parent"
                                        android:layout_centerInParent="true"
                                        android:gravity="center_vertical"
                                        android:weightSum="2"
                                        android:orientation="horizontal"
                                        android:layout_height="wrap_content">

                                        <RelativeLayout
                                            android:id="@+id/rel_accept_bg"
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/rounded_green_bg"
                                            android:gravity="center"
                                            android:padding="2dp"
                                            android:layout_gravity="left">

                                            <com.eleganzit.amigo.utils.TextViewRobotoBold
                                                android:id="@+id/txt_accept"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:paddingTop="2dp"
                                                android:paddingBottom="2dp"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                                android:textColor="#ffffff"
                                                android:text="Accept"
                                                android:layout_centerInParent="true" />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:layout_width="0dp"
                                            android:layout_weight="1"
                                            android:padding="2dp"
                                            android:layout_height="wrap_content"
                                            android:id="@+id/rel_reject_bg"
                                            android:layout_marginLeft="5dp"
                                            android:background="@drawable/rounded_blue_bg">

                                            <com.eleganzit.amigo.utils.TextViewRobotoBold
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                                android:textColor="#ffffff"
                                                android:paddingTop="2dp"
                                                android:paddingBottom="2dp"
                                                android:text="Reject"
                                                android:layout_centerInParent="true" />

                                        </RelativeLayout>
                                    </LinearLayout>


                                </RelativeLayout>
                                <LinearLayout
                                    android:id="@+id/follow"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center"
                                    android:padding="4dp"
                                    android:layout_centerVertical="true"
                                    android:background="@drawable/rounded_green_bg">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:id="@+id/img_follow"
                                        android:layout_height="18dp"
                                        android:src="@mipmap/square_add_white"
                                        />

                                    <com.eleganzit.amigo.utils.TextViewRobotoBold
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                                        android:textColor="#ffffff"
                                        android:id="@+id/txt_follow"
                                        android:layout_marginLeft="10dp"
                                        android:text="Add Friend"/>
                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_below="@+id/rfirst"
                        android:layout_width="match_parent"
                        android:paddingTop="10dp"
                        android:paddingRight="4dp"
                        android:paddingLeft="4dp"
                        android:paddingBottom="5dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_alignParentLeft="true"
                            android:orientation="vertical">

                            <com.eleganzit.amigo.utils.TextViewRobotoBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/postdata"
                                android:textColor="#000000"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="Posts"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical">

                            <com.eleganzit.amigo.utils.TextViewRobotoBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="#000000"
                                android:id="@+id/followersdata"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="Followers"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_alignParentRight="true"
                            android:orientation="vertical">

                            <com.eleganzit.amigo.utils.TextViewRobotoBold
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:id="@+id/followingdata"

                                android:textColor="#000000"
                                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

                            <com.eleganzit.amigo.utils.TextViewRobotoRegular
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:text="Following"/>

                        </LinearLayout>

                    </RelativeLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/fv"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@+id/second"
                    android:background="#dfdfdf"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/profile_tabs"
                android:layout_below="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:background="#ffffff">

                <com.eleganzit.amigo.utils.TextViewRobotoBold
                    android:id="@+id/tab_home"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#8c8c8c"
                    android:layout_weight="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Home"/>

                <com.eleganzit.amigo.utils.TextViewRobotoBold
                    android:id="@+id/tab_about"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#8c8c8c"
                    android:layout_weight="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="About"/>

                <com.eleganzit.amigo.utils.TextViewRobotoBold
                    android:id="@+id/tab_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#8c8c8c"
                    android:layout_weight="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Photos"/>

                <com.eleganzit.amigo.utils.TextViewRobotoBold
                    android:id="@+id/tab_events"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#8c8c8c"
                    android:layout_weight="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Events"/>

                <com.eleganzit.amigo.utils.TextViewRobotoBold
                    android:id="@+id/tab_opportunity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="#8c8c8c"
                    android:layout_weight="1"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                    android:text="Opportunity"/>

            </LinearLayout>

            <FrameLayout
                android:id="@+id/frame"
                android:layout_below="@+id/profile_tabs"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
</layout>